<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    tools:context=".FullscreenActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/screen_outer" >

       <net.junkcode.oculus_test.MyGLSurfaceView android:id="@+id/surfaceviewclass_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <net.junkcode.oculus_test.MyGLSurfaceView
            android:id="@+id/surfaceviewclass_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/screen_ipd"
            android:layout_weight="1" />

    </LinearLayout>

</FrameLayout>